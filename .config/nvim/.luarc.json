{
  "runtime": {
    "version": "LuaJIT"
  },
  "diagnostics": {
    "globals": ["vim"],
    "neededFileStatus": {
      "codestyle-check": "Opened",
      "type-check": "Opened"
    }
  },
  "workspace": {
    "maxPreload": 100000,
    "preloadFileSize": 10000,
    "checkThirdParty": false,
    "library": {
      "/usr/share/nvim/runtime/lua": true,
      "./lua": true,
      "/home/lucario387/.local/share/nvim/site/pack/packer": true
    }
  },
  "format": {
    // -- https://github.com/CppCXY/EmmyLuaCodeStyle/blob/master/README_EN.md
    "enable": true,
    "defaultConfig": {
      "indent_style": "tab",
      "tab_width": 2,
      "indent_size": 2,
      "quote_style": "double",
      "align_function_define_params": true,
      "continuous_assign_statement_align_to_equal_sign": true,
      "continuous_assign_table_field_align_to_equal_sign": true,
      "keep_one_space_between_table_and_braket": true,
      "keep_one_space_between_namedef_and_attribute": true,
      "insert_final_newline": true
    }
  },
  "hint.enable": false,
  "hover.enable": true,
  "telemetry.enable": false
}
